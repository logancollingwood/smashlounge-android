<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="smashlounge.smashlounge" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".loadingScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".techniques"
            android:label="@string/title_activity_techniques" >
        </activity>
        <activity
            android:name=".characters"
            android:label="@string/title_activity_characters" >
        </activity>
        <activity
            android:name=".techDetail"
            android:label="@string/title_activity_tech_detail" >
        </activity>
    </application>

</manifest>
